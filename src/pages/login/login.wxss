
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-card {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
}

.login-header {
  padding: 80rpx 60rpx 60rpx;
  text-align: center;
}

.logo {
  width: 128rpx;
  height: 128rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.form-group {
  margin-bottom: 40rpx;
  padding: 0 60rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.input {
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  background: white;
}

.input:focus {
  border-color: #3b82f6;
}

.password-input {
  position: relative;
}

/* 美观的密码切换图标样式 */
.eye-toggle {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  z-index: 10;
}

.eye-toggle:active {
  transform: translateY(-50%) scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.2);
}

.eye-toggle.active {
  background: linear-gradient(135deg, #10b981, #059669);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.eye-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.eye-svg {
  width: 100%;
  height: 100%;
  position: relative;
}

.eye-outline {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid white;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
}

.eye-pupil {
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  transition: all 0.3s ease;
}

.eye-toggle.active .eye-pupil {
  transform: scale(1.2);
}

.eye-lid {
  position: absolute;
  top: 0;
  left: 0;
  width: 24rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border-radius: 12rpx 12rpx 0 0;
  transition: all 0.3s ease;
  transform-origin: bottom;
}

.eye-toggle.active .eye-lid {
  background: linear-gradient(135deg, #10b981, #059669);
}

.eye-lid.closed {
  transform: scaleY(0);
  opacity: 0.8;
}

.eye-lid.open {
  transform: scaleY(0);
}

.eye-slash {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 2rpx;
  background: white;
  transform: translate(-50%, -50%) rotate(45deg) scaleX(0);
  transform-origin: center;
  transition: all 0.3s ease;
  opacity: 0;
}

.eye-slash.visible {
  transform: translate(-50%, -50%) rotate(45deg) scaleX(1);
  opacity: 1;
}

/* 添加悬停效果 */
.eye-toggle:hover {
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.4);
}

.eye-toggle.active:hover {
  box-shadow: 0 6rpx 16rpx rgba(16, 185, 129, 0.4);
}

.login-btn {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin: 40rpx 60rpx;
}

.login-btn:active {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
}

.login-btn[disabled] {
  background: #9ca3af;
}

.footer {
  padding: 40rpx 60rpx 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 修复提示框样式 */
.weui-toast {
  max-width: 80%;
}

.weui-toast__content {
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
  white-space: pre-wrap;
}
