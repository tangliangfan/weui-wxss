
.login-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 40rpx;
}

.weui-cells {
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.weui-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.weui-input {
  font-size: 28rpx;
}

.weui-input-group {
  display: flex;
  align-items: center;
}

.weui-icon-btn {
  padding: 20rpx;
}

.weui-btn-area {
  margin: 40rpx 0;
}

.weui-footer {
  text-align: center;
  margin-top: 60rpx;
}

.weui-footer__text {
  font-size: 24rpx;
  color: #999;
}
  