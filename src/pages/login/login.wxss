
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-card {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
}

.login-header {
  padding: 80rpx 60rpx 60rpx;
  text-align: center;
}

.logo {
  width: 128rpx;
  height: 128rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.form-group {
  margin-bottom: 40rpx;
  padding: 0 60rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.input {
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  background: white;
}

.input:focus {
  border-color: #3b82f6;
}

.password-input {
  position: relative;
}

.eye-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
  z-index: 10;
  cursor: pointer;
}

.eye-svg-container {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.eye-svg {
  width: 100%;
  height: 100%;
  position: relative;
  transition: all 0.3s ease;
}

/* 可见状态的眼睛图标 - 直接控制显示 */
.eye-visible-icon {
  position: relative;
  width: 24rpx;
  height: 24rpx;
  display: none;
}

.eye-hidden-icon {
  position: relative;
  width: 24rpx;
  height: 24rpx;
  display: none;
}

/* 当父元素有 eye-visible 类时显示睁眼图标 */
.eye-visible .eye-visible-icon {
  display: block;
}

.eye-visible .eye-hidden-icon {
  display: none;
}

/* 当父元素有 eye-hidden 类时显示闭眼图标 */
.eye-hidden .eye-visible-icon {
  display: none;
}

.eye-hidden .eye-hidden-icon {
  display: block;
}

.eye-outline {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #6b7280;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
}

.eye-pupil {
  width: 8rpx;
  height: 8rpx;
  background: #6b7280;
  border-radius: 50%;
  position: absolute;
  top: 8rpx;
  left: 8rpx;
}

.eye-line {
  width: 24rpx;
  height: 2rpx;
  background: #6b7280;
  position: absolute;
  top: 11rpx;
  left: 0;
  transform: rotate(-45deg);
}

.eye-icon:active .eye-outline,
.eye-icon:active .eye-pupil,
.eye-icon:active .eye-line {
  border-color: #3b82f6;
  background: #3b82f6;
}

.login-btn {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin: 40rpx 60rpx;
}

.login-btn:active {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
}

.login-btn[disabled] {
  background: #9ca3af;
}

.footer {
  padding: 40rpx 60rpx 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 修复提示框样式 */
.weui-toast {
  max-width: 80%;
}

.weui-toast__content {
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
  white-space: pre-wrap;
}
