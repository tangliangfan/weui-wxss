
/* 引入微信小程序图标字体 */
@import "https://at.alicdn.com/t/c/font_4480813_8x9k4q2z1zr.css";

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-card {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
}

.login-header {
  padding: 80rpx 60rpx 60rpx;
  text-align: center;
}

.logo {
  width: 128rpx;
  height: 128rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.form-group {
  margin-bottom: 40rpx;
  padding: 0 60rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.input {
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  background: white;
  width: 100%;
  box-sizing: border-box;
}

.input:focus {
  border-color: #3b82f6;
}

.password-input {
  position: relative;
}

.eye-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: #6b7280;
}

.icon-eye-open:before {
  content: "\e60a";
}

.icon-eye-close:before {
  content: "\e60b";
}

.eye-icon:active .iconfont {
  color: #3b82f6;
}

.login-btn {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin: 40rpx 60rpx;
  width: calc(100% - 120rpx);
}

.login-btn:active {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
}

.login-btn[disabled] {
  background: #9ca3af;
}

.footer {
  padding: 40rpx 60rpx 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 修复提示框样式 */
.weui-toast {
  max-width: 80%;
}

.weui-toast__content {
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
  white-space: pre-wrap;
}
