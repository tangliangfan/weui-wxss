
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
}

.login-card {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
}

.login-header {
  padding: 80rpx 60rpx 60rpx;
  text-align: center;
}

.logo {
  width: 128rpx;
  height: 128rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.form-group {
  margin-bottom: 40rpx;
  padding: 0 60rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.input {
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 0 28rpx; /* 修复：移除上下padding，使用line-height垂直居中 */
  font-size: 28rpx;
  background: white;
  width: 100%;
  box-sizing: border-box;
  height: 96rpx;
  line-height: 96rpx; /* 修复：使用与高度相同的line-height实现垂直居中 */
}

.input:focus {
  border-color: #3b82f6;
}

.password-input {
  position: relative;
}

.eye-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
  z-index: 10;
  cursor: pointer;
}

.eye-text {
  font-size: 36rpx;
  display: block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.login-btn {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 0; /* 修复：移除上下padding，使用line-height垂直居中 */
  font-size: 32rpx;
  font-weight: 600;
  margin: 40rpx 60rpx;
  width: calc(100% - 120rpx);
  height: 96rpx;
  line-height: 96rpx; /* 修复：使用与高度相同的line-height实现垂直居中 */
  box-sizing: border-box;
}

.login-btn:active {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
}

.login-btn[disabled] {
  background: #9ca3af;
}

.footer {
  padding: 40rpx 60rpx 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 移除可能导致问题的微信原生提示框样式 */
.weui-toast,
.weui-toast__content {
  display: none;
}

/* 自定义提示框样式 */
.custom-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 32rpx 48rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.4;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.3s ease;
  max-width: 80%;
  word-wrap: break-word;
  white-space: pre-wrap;
  text-align: center;
}

.custom-toast.show {
  opacity: 1;
}

.toast-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.toast-text {
  display: block;
  writing-mode: horizontal-tb;
  text-orientation: mixed;
}
  