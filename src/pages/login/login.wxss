
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-card {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
}

.login-header {
  padding: 80rpx 60rpx 60rpx;
  text-align: center;
}

.logo {
  width: 128rpx;
  height: 128rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.form-group {
  margin-bottom: 40rpx;
  padding: 0 60rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.input {
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  background: white;
}

.input:focus {
  border-color: #3b82f6;
}

.password-input {
  position: relative;
}

/* 眼睛图标样式 - 重新设计 */
.eye-toggle {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 10;
}

.eye-toggle:active {
  background: rgba(59, 130, 246, 0.1);
}

.eye-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.eye-svg {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 眼球样式 */
.eyeball {
  width: 20rpx;
  height: 20rpx;
  background: #4b5563;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.eye-open .eyeball {
  background: #4b5563;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.eye-closed .eyeball {
  background: #9ca3af;
  transform: scale(0.8);
}

/* 瞳孔 */
.pupil {
  width: 8rpx;
  height: 8rpx;
  background: #1f2937;
  border-radius: 50%;
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  transition: all 0.2s ease;
}

.eye-open .pupil {
  opacity: 1;
  transform: scale(1);
}

.eye-closed .pupil {
  opacity: 0;
  transform: scale(0.5);
}

/* 高光 */
.highlight {
  width: 4rpx;
  height: 4rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
  top: 3rpx;
  left: 3rpx;
  opacity: 0.8;
  transition: all 0.2s ease;
}

.eye-open .highlight {
  opacity: 0.8;
}

.eye-closed .highlight {
  opacity: 0;
}

/* 眼皮 */
.eyelid {
  width: 24rpx;
  height: 12rpx;
  background: #f3f4f6;
  border-radius: 12rpx 12rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: center top;
  z-index: 2;
}

.eyelid.closed {
  height: 24rpx;
  border-radius: 12rpx;
  transform: scaleY(0.8);
  background: #e5e7eb;
}

/* 睫毛 */
.eyelashes {
  position: absolute;
  top: -2rpx;
  left: 0;
  width: 24rpx;
  height: 6rpx;
  z-index: 3;
}

.lash {
  position: absolute;
  background: #374151;
  border-radius: 1rpx;
  transition: all 0.3s ease;
}

.lash-1 {
  width: 3rpx;
  height: 6rpx;
  left: 5rpx;
  transform: rotate(-15deg);
}

.lash-2 {
  width: 3rpx;
  height: 8rpx;
  left: 11rpx;
  transform: rotate(0deg);
}

.lash-3 {
  width: 3rpx;
  height: 6rpx;
  left: 17rpx;
  transform: rotate(15deg);
}

.eye-closed .lash {
  opacity: 0;
  transform: scale(0.8);
}

/* 悬停效果 */
.eye-toggle:hover .eye-icon {
  transform: scale(1.1);
}

.eye-toggle:active .eye-icon {
  transform: scale(0.95);
}

/* 动画效果 */
@keyframes blink {
  0%, 100% { transform: scaleY(1); }
  50% { transform: scaleY(0.1); }
}

.eye-open .eyelid {
  animation: blink 2s infinite;
}

.login-btn {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin: 40rpx 60rpx;
}

.login-btn:active {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
}

.login-btn[disabled] {
  background: #9ca3af;
}

.footer {
  padding: 40rpx 60rpx 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 修复提示框样式 */
.weui-toast {
  max-width: 80%;
}

.weui-toast__content {
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
  white-space: pre-wrap;
}
