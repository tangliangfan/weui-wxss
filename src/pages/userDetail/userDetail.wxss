
/* 用户详情页面样式 */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏样式调整 */
.weui-navbar {
  background: white;
  border-bottom: 2rpx solid #e5e7eb;
}

.weui-navbar__inner {
  padding: 20rpx 32rpx;
}

.weui-navbar__title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.weui-btn_icon .weui-icon-back {
  font-size: 32rpx;
}

/* 内容容器 */
.content-container {
  flex: 1;
  padding: 24rpx 32rpx 120rpx;
}

/* 面板样式调整 */
.weui-panel {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f3f4f6;
  overflow: hidden;
}

.weui-panel__hd {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.weui-panel__hd__inner {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.weui-panel__hd__inner .weui-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.weui-panel__bd {
  padding: 24rpx 32rpx 32rpx;
}

/* 单元格样式调整 */
.weui-cell {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.weui-cell:last-child {
  border-bottom: none;
}

.weui-cell__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.weui-cell__desc {
  font-size: 28rpx;
  color: #6b7280;
}

.weui-cell__desc-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.weui-cell__desc-item .weui-icon-dot {
  font-size: 8rpx;
  color: #3b82f6;
}

/* 头像样式调整 */
.weui-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.weui-avatar__text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

/* 标签样式调整 */
.weui-tag {
  background: #e0f2fe;
  color: #0369a1;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

/* 底部操作栏样式调整 */
.weui-actionsheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #e5e7eb;
  z-index: 100;
}

.weui-actionsheet .weui-btn_primary {
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.weui-actionsheet .weui-icon-add {
  margin-right: 16rpx;
  font-size: 32rpx;
}

/* 模态框样式调整 */
.weui-dialog {
  z-index: 1000;
}

.weui-dialog__hd {
  padding: 32rpx 32rpx 24rpx;
}

.weui-dialog__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.weui-dialog__title-with-icon {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.weui-dialog__title-with-icon .weui-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.weui-dialog__subtitle {
  font-size: 24rpx;
  color: #6b7280;
}

.weui-dialog__bd {
  padding: 24rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.weui-dialog__ft {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f3f4f6;
  display: flex;
  gap: 16rpx;
}

/* 表单样式调整 */
.weui-cells {
  margin-top: 0;
}

.weui-cell {
  padding: 20rpx 0;
}

.weui-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.weui-input,
.weui-textarea {
  font-size: 28rpx;
  color: #333;
}

.weui-textarea {
  min-height: 120rpx;
}

/* 按钮样式调整 */
.weui-btn_mini {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.weui-icon_in-btn {
  margin-right: 8rpx;
}

/* 空状态和加载状态样式调整 */
.weui-empty,
.weui-loadmore {
  padding: 80rpx 0;
}

.weui-empty__description,
.weui-loadmore__tips {
  font-size: 28rpx;
  color: #999;
}

.weui-empty_small {
  padding: 40rpx 0;
}

/* 响应式适配 */
@media (max-width: 768px) {
  .content-container {
    padding: 16rpx 24rpx 120rpx;
  }
  
  .weui-panel__hd,
  .weui-panel__bd {
    padding: 24rpx;
  }
  
  .weui-dialog {
    padding: 16rpx;
  }
}
  