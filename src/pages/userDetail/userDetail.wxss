
/* 用户详情页面样式 */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.nav-bar {
  background: white;
  border-bottom: 2rpx solid #e5e7eb;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.back-btn {
  background: transparent;
  border: none;
  padding: 16rpx;
  margin-right: 24rpx;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}

.back-button {
  background: #3b82f6;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 0 48rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.back-button:active {
  background: #2563eb;
}

/* 内容容器 */
.content-container {
  flex: 1;
  padding: 24rpx 32rpx 120rpx;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f3f4f6;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.card-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.edit-btn {
  background: transparent;
  border: none;
  padding: 8rpx;
}

.edit-icon {
  width: 24rpx;
  height: 24rpx;
}

.card-content {
  padding: 24rpx 32rpx 32rpx;
}

/* 用户头像区域 */
.user-avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: 24rpx;
  color: #6b7280;
}

/* 信息项样式 */
.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.7;
}

.info-text {
  font-size: 28rpx;
  color: #374151;
}

/* 健康档案区域 */
.health-section {
  margin-bottom: 32rpx;
}

.health-section:last-child {
  margin-bottom: 0;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

/* 疾病标签 */
.diseases-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.disease-tag {
  background: #e0f2fe;
  color: #0369a1;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.empty-tag {
  color: #9ca3af;
  font-size: 28rpx;
}

/* 用药情况 */
.medications-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.medication-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #374151;
}

.medication-dot {
  width: 8rpx;
  height: 8rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin-right: 16rpx;
}

.empty-text {
  color: #9ca3af;
  font-size: 28rpx;
}

/* 随访记录 */
.followup-item {
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #f3f4f6;
}

.followup-item:last-child {
  margin-bottom: 0;
}

.followup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.followup-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.followup-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.edit-followup-btn {
  background: transparent;
  border: none;
  padding: 8rpx;
}

.edit-icon-small {
  width: 20rpx;
  height: 20rpx;
}

/* 下次随访日期徽章样式 */
.next-followup-badge {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.next-followup-badge.active {
  background: #dcfce7;
  color: #166534;
}

.next-followup-badge.expired {
  background: #fef2f2;
  color: #991b1b;
}

.next-followup-badge.passed {
  background: #f3f4f6;
  color: #6b7280;
}

.followup-content {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
}

.empty-followup {
  text-align: center;
  padding: 40rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #e5e7eb;
  z-index: 100;
}

.add-followup-btn {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  border-radius: 20rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.add-followup-btn:active {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
}

.btn-loading {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
  position: relative;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: #6b7280;
}

.modal-title-with-icon {
  display: flex;
  align-items: center;
}

.modal-title-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.close-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: transparent;
  border: none;
  padding: 8rpx;
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx 32rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 8rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: white;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #3b82f6;
  outline: none;
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: #9ca3af;
}

.form-textarea {
  resize: none;
  min-height: 120rpx;
}

/* 底部按钮区域 */
.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f3f4f6;
  display: flex;
  gap: 16rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-cancel {
  background: white;
  border: 2rpx solid #d1d5db;
  color: #374151;
}

.btn-confirm {
  background: #3b82f6;
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-confirm:active {
  background: #2563eb;
}

/* 响应式适配 */
@media (max-width: 768px) {
  .content-container {
    padding: 16rpx 24rpx 120rpx;
  }
  
  .card-header,
  .card-content {
    padding: 24rpx;
  }
  
  .modal {
    padding: 16rpx;
  }
}
