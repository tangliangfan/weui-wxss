
<!-- 删除确认对话框 - 重新设计布局 -->
<view wx:if="{{showDeleteDialog}}" class="modal">
  <view class="modal-content delete-modal">
    <!-- 弹窗头部 - 添加警告图标 -->
    <view class="modal-header delete-header">
      <image src="/images/warning.png" class="warning-icon" />
      <text class="modal-title delete-title">确认删除</text>
      <text class="modal-subtitle delete-subtitle">确定要删除用户 "{{userToDelete ? userToDelete.name : ''}}" 吗？</text>
    </view>
    
    <!-- 弹窗内容区域 - 重新设计警告信息 -->
    <view class="modal-body delete-body">
      <view class="warning-message">
        <image src="/images/alert-triangle.png" class="alert-icon" />
        <text class="warning-text">此操作不可恢复，请谨慎操作！</text>
      </view>
    </view>
    
    <!-- 底部按钮区域 -->
    <view class="modal-footer delete-footer">
      <button class="btn-cancel delete-cancel" bindtap="hideModal">取消</button>
      <button class="btn-confirm delete-confirm" bindtap="confirmDelete" loading="{{deleting}}">
        {{deleting ? '删除中...' : '确认删除'}}
      </button>
    </view>
  </view>
</view>
