
<!-- 页面容器 -->
<view class="container">
  <!-- 搜索栏区域 -->
  <view class="search-bar">
    <!-- 搜索输入框容器 -->
    <view class="search-input">
      <!-- 搜索图标 -->
      <image src="/images/search.png" class="search-icon" />
      <!-- 搜索输入框，绑定搜索文本和输入事件 -->
      <input 
        type="text" 
        placeholder="搜索姓名、手机号或小区名称..." 
        value="{{searchText}}" 
        bindinput="onSearchInput"
        bindconfirm="handleSearch"
      />
    </view>
    <!-- 搜索按钮，点击触发搜索 -->
    <button class="search-btn" bindtap="handleSearch">搜索</button>
  </view>

  <!-- 数据总览卡片区域 -->
  <view class="overview-section">
    <view class="section-header">
      <text class="section-title">数据总览</text>
    </view>
    
    <!-- 总览卡片加载状态 -->
    <view wx:if="{{overviewLoading}}" class="overview-loading">
      <image src="/images/loading.gif" class="loading-icon" />
      <text>加载中...</text>
    </view>

    <!-- 总览卡片网格布局 -->
    <view wx:else class="overview-grid">
      <!-- 用户总数卡片 -->
      <view class="overview-card total-users">
        <view class="card-icon">
          <image src="/images/users.png" class="icon" />
        </view>
        <view class="card-content">
          <text class="card-value">{{overviewData.totalUsers}}</text>
          <text class="card-label">用户总数</text>
        </view>
      </view>

      <!-- 本年新增用户卡片 -->
      <view class="overview-card new-users-year">
        <view class="card-icon">
          <image src="/images/user-plus.png" class="icon" />
        </view>
        <view class="card-content">
          <text class="card-value">{{overviewData.newUsersThisYear}}</text>
          <text class="card-label">本年新增</text>
        </view>
      </view>

      <!-- 本月新增用户卡片 -->
      <view class="overview-card new-users-month">
        <view class="card-icon">
          <image src="/images/user-plus.png" class="icon" />
        </view>
        <view class="card-content">
          <text class="card-value">{{overviewData.newUsersThisMonth}}</text>
          <text class="card-label">本月新增</text>
        </view>
      </view>

      <!-- 本月随访卡片 -->
      <view class="overview-card followed-month">
        <view class="card-icon">
          <image src="/images/calendar-check.png" class="icon" />
        </view>
        <view class="card-content">
          <text class="card-value">{{overviewData.followedThisMonth}}</text>
          <text class="card-label">本月随访</text>
        </view>
      </view>

      <!-- 过期随访卡片 -->
      <view class="overview-card overdue-followup">
        <view class="card-icon">
          <image src="/images/alert-triangle.png" class="icon" />
        </view>
        <view class="card-content">
          <text class="card-value">{{overviewData.overdueFollowup}}</text>
          <text class="card-label">过期随访</text>
        </view>
      </view>

      <!-- 无随访记录卡片 -->
      <view class="overview-card no-followup">
        <view class="card-icon">
          <image src="/images/user-x.png" class="icon" />
        </view>
        <view class="card-content">
          <text class="card-value">{{overviewData.noFollowupRecords}}</text>
          <text class="card-label">无随访记录</text>
        </view>
      </view>
    </view>
  </view>

  <!-- ... 保持已有代码 -->
</view>
