
/* 页面容器样式 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 16rpx;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.search-input .weui-icon-search {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
}

.search-btn {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 添加用户按钮样式 */
.add-user-btn {
  margin-bottom: 24rpx;
}

.add-user-btn .weui-btn_primary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.add-user-btn .weui-icon-add {
  font-size: 32rpx;
}

/* 用户列表样式 */
.user-list {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fafafa;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 26rpx;
  color: #666;
}

/* 用户卡片样式 */
.user-card {
  position: relative;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: #ffffff;
}

.user-card:last-child {
  border-bottom: none;
}

/* 随访剩余时间徽章样式 */
.weui-badge.followup-time-remaining {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #dcfce7;
  color: #166534;
  z-index: 10;
  min-width: 80rpx;
  text-align: center;
}

.weui-badge.followup-time-overdue {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #fee2e2;
  color: #991b1b;
  z-index: 10;
  min-width: 80rpx;
  text-align: center;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-badge.success {
  background: rgba(82, 196, 26, 0.1);
  color: #389e0d;
}

.status-badge.danger {
  background: rgba(245, 34, 45, 0.1);
  color: #cf1322;
}

.status-badge.secondary {
  background: rgba(191, 191, 191, 0.1);
  color: #8c8c8c;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.info-item .weui-icon {
  font-size: 28rpx;
  opacity: 0.6;
}

/* 搜索结果项样式 */
.search-result-item {
  position: relative;
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: #ffffff;
}

.search-result-item:last-child {
  border-bottom: none;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.result-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

/* 阻止事件冒泡 */
.stop-propagation {
  /* 空样式，用于事件处理 */
}

/* 模态框样式调整 */
.weui-half-screen-dialog,
.weui-dialog {
  z-index: 1000;
}

.weui-half-screen-dialog__bd,
.weui-dialog__bd {
  max-height: 60vh;
}

/* 表单样式调整 */
.weui-cells {
  margin-top: 0;
}

.weui-cell {
  padding: 20rpx 0;
}

.weui-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.weui-input,
.weui-textarea {
  font-size: 28rpx;
  color: #333;
}

.weui-textarea {
  min-height: 120rpx;
}

/* 按钮样式调整 */
.weui-btn_mini {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

/* 空状态和加载状态样式调整 */
.weui-empty,
.weui-loadmore {
  padding: 80rpx 0;
}

.weui-empty__description,
.weui-loadmore__tips {
  font-size: 28rpx;
  color: #999;
}
  