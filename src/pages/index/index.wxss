
/* 自定义搜索栏样式 */
.custom-search-bar {
  margin-bottom: 20rpx;
}

/* 用户单元格样式 */
.user-cell {
  position: relative;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

/* 徽章样式适配 WeUI */
.weui-badge.success {
  background: rgba(82, 196, 26, 0.1);
  color: #389e0d;
}

.weui-badge.danger {
  background: rgba(245, 34, 45, 0.1);
  color: #cf1322;
}

.weui-badge.secondary {
  background: rgba(191, 191, 191, 0.1);
  color: #8c8c8c;
}

.followup-time-remaining {
  background: #dcfce7;
  color: #166534;
}

.followup-time-overdue {
  background: #fee2e2;
  color: #991b1b;
}

/* 空状态样式 */
.weui-empty {
  padding: 80rpx 0;
  text-align: center;
}

.weui-empty__desc {
  color: #999;
  font-size: 28rpx;
  margin-top: 16rpx;
}

/* 加载更多样式 */
.weui-loadmore {
  padding: 40rpx 0;
}
  