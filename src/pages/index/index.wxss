.overview-card.total-users .card-icon-wrapper {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
}

.overview-card.total-users .card-value {
  color: #3b82f6; /* 数值颜色与图标背景一致 */
}

/* 本年新增用户卡片 - 青色 */
.overview-card.new-users-year .card-icon-wrapper {
  background: linear-gradient(135deg, #0d9488, #0f766e);
}

.overview-card.new-users-year .card-value {
  color: #0d9488; /* 数值颜色与图标背景一致 */
}

/* 本月新增用户卡片 - 紫色 */
.overview-card.new-users-month .card-icon-wrapper {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
}

.overview-card.new-users-month .card-value {
  color: #8b5cf6; /* 数值颜色与图标背景一致 */
}

/* 本月随访卡片 - 绿色 */
.overview-card.followed-month .card-icon-wrapper {
  background: linear-gradient(135deg, #22c55e, #16a34a);
}

.overview-card.followed-month .card-value {
