
/* 页面容器样式 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 16rpx;
}

/* 搜索栏样式 - 优化宽度比例，确保提示文字完整显示 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 12rpx; /* 减小间距 */
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1; /* 搜索框占据剩余所有空间 */
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  min-width: 0; /* 允许搜索框收缩 */
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0; /* 防止图标被压缩 */
}

.search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  min-width: 0; /* 允许输入框收缩 */
  width: 100%; /* 确保输入框宽度充满容器 */
}

.search-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 0 16rpx; /* 进一步减小左右内边距 */
  height: 80rpx;
  font-size: 26rpx; /* 稍微减小字体大小 */
  line-height: 80rpx;
  min-width: 100rpx; /* 减小最小宽度 */
  flex-shrink: 0; /* 防止按钮被压缩 */
  white-space: nowrap; /* 防止文字换行 */
}

/* 数据总览区域样式 */
.overview-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.overview-section .section-header {
  margin-bottom: 24rpx;
  padding: 0;
  border-bottom: none;
  background: none;
}

.overview-section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.overview-section .section-subtitle {
  font-size: 26rpx;
  color: #666;
  opacity: 0.8;
}

/* 总览加载状态 */
.overview-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.overview-loading .loading-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

/* 总览卡片网格布局 - 3×2 网格 */
.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

/* 总览卡片基础样式 - 最终优化版 */
.overview-card {
  position: relative;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  min-height: 120rpx; /* 减小卡片高度 */
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.overview-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 卡片数值样式 - 右上角，与图标中心水平对齐 */
.card-value {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 32rpx; /* 稍微减小字体大小 */
  font-weight: 700;
  line-height: 1;
  z-index: 2;
}

/* 卡片图标样式 - 圆形，减小尺寸 */
.card-icon-wrapper {
  width: 48rpx; /* 减小图标尺寸 */
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx; /* 减小图标与标签间距 */
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

.card-icon {
  width: 24rpx; /* 减小图标尺寸 */
  height: 24rpx;
  filter: brightness(0) invert(1); /* 图标变为白色 */
}

/* 卡片标签样式 - 调整位置和样式 */
.card-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  line-height: 1.2;
  margin-top: 4rpx; /* 减小与图标的间距 */
}

/* 移除卡片趋势标签 */
.card-trend {
  display: none;
}

/* 特定卡片样式 - 统一白色背景，数值颜色与图标背景保持一致 */

