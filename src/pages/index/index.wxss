
/* 页面容器样式 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 16rpx;
}

/* 搜索栏样式 - 优化宽度比例，确保提示文字完整显示 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 12rpx; /* 减小间距 */
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1; /* 搜索框占据剩余所有空间 */
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  min-width: 0; /* 允许搜索框收缩 */
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0; /* 防止图标被压缩 */
}

.search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  min-width: 0; /* 允许输入框收缩 */
  width: 100%; /* 确保输入框宽度充满容器 */
}

.search-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 0 16rpx; /* 进一步减小左右内边距 */
  height: 80rpx;
  font-size: 26rpx; /* 稍微减小字体大小 */
  line-height: 80rpx;
  min-width: 100rpx; /* 减小最小宽度 */
  flex-shrink: 0; /* 防止按钮被压缩 */
  white-space: nowrap; /* 防止文字换行 */
}

/* 数据总览区域样式 */
.overview-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.overview-section .section-header {
  margin-bottom: 24rpx;
  padding: 0;
  border-bottom: none;
  background: none;
}

.overview-section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.overview-section .section-subtitle {
  font-size: 26rpx;
  color: #666;
  opacity: 0.8;
}

/* 总览加载状态 */
.overview-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.overview-loading .loading-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

/* 总览卡片网格布局 - 3×2 网格 */
.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

/* 总览卡片基础样式 */
.overview-card {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.overview-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 卡片图标样式 */
.card-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  position: relative;
}

.card-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 卡片内容样式 */
.card-content {
  flex: 1;
  margin-bottom: 12rpx;
}

.card-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.card-label {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 卡片趋势标签 */
.card-trend {
  margin-top: auto;
}

.trend-text {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.9);
}

