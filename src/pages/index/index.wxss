
/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 数据总览区域 */
.dashboard-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  width: 8rpx;
  height: 36rpx;
  background: #4f46e5;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stat-card.primary {
  border-color: #4f46e5;
  background: linear-gradient(135deg, #4f46e5, #6366f1);
  color: white;
}

.stat-card.success {
  border-color: #10b981;
  background: linear-gradient(135deg, #10b981, #34d399);
  color: white;
}

.stat-card.warning {
  border-color: #f59e0b;
  background: linear-gradient(135deg, #f59e0b, #fbbf24);
  color: white;
}

.stat-card.danger {
  border-color: #ef4444;
  background: linear-gradient(135deg, #ef4444, #f87171);
  color: white;
}

.stat-card.secondary {
  border-color: #6b7280;
  background: linear-gradient(135deg, #6b7280, #9ca3af);
  color: white;
}

.stat-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  opacity: 0.9;
}

.stat-content {
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 500;
}

/* 图表容器 */
.chart-container {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 32rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 24rpx;
  text-align: center;
}

.chart-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.chart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
}

.chart-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.chart-info {
  flex: 1;
}

.chart-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.chart-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 用户列表区域 */
.user-list-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #9ca3af;
  font-weight: 500;
}

.empty-search {
  text-align: center;
  padding: 60rpx 0;
  color: #9ca3af;
}

/* 表单样式 */
.add-user-form {
  padding: 20rpx 0;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.form-input {
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  background: #ffffff;
}

.form-input:focus {
  border-color: #4f46e5;
  outline: none;
}

.submit-btn {
  background: #4f46e5;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 32rpx;
}

.submit-btn:active {
  background: #4338ca;
}

/* 删除对话框 */
.delete-dialog {
  text-align: center;
  padding: 20rpx 0;
}

.dialog-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.btn-cancel {
  flex: 1;
  background: #f3f4f6;
  color: #374151;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
}

.btn-confirm {
  flex: 1;
  background: #ef4444;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .chart-grid {
    grid-template-columns: 1fr;
  }
  
  .stat-card {
    padding: 24rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .stat-label {
    font-size: 24rpx;
  }
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}
  