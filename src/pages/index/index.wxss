
/* 页面容器样式 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 16rpx;
}

/* 搜索栏样式 - 优化宽度比例，确保提示文字完整显示 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 12rpx; /* 减小间距 */
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1; /* 搜索框占据剩余所有空间 */
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  min-width: 0; /* 允许搜索框收缩 */
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0; /* 防止图标被压缩 */
}

.search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  min-width: 0; /* 允许输入框收缩 */
  width: 100%; /* 确保输入框宽度充满容器 */
}

.search-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 0 16rpx; /* 进一步减小左右内边距 */
  height: 80rpx;
  font-size: 26rpx; /* 稍微减小字体大小 */
  line-height: 80rpx;
  min-width: 100rpx; /* 减小最小宽度 */
  flex-shrink: 0; /* 防止按钮被压缩 */
  white-space: nowrap; /* 防止文字换行 */
}

/* 数据总览区域样式 */
.overview-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.overview-section .section-header {
  margin-bottom: 24rpx;
  padding: 0;
  border-bottom: none;
  background: none;
}

.overview-section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 总览加载状态 */
.overview-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
}

.overview-loading .loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 16rpx;
}

/* 总览卡片网格布局 - 调整为3列 */
.overview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

/* 总览卡片基础样式 */
.overview-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.overview-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.12);
}

.card-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.card-icon .icon {
  width: 28rpx;
  height: 28rpx;
}

.card-content {
  flex: 1;
}

.card-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.card-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 特定卡片样式 */
.overview-card.total-users {
  background: linear-gradient(135deg, #e6f7ff, #bae7ff);
}

.overview-card.new-users-year {
  background: linear-gradient(135deg, #f6ffed, #d9f7be);
}

.overview-card.new-users-month {
  background: linear-gradient(135deg, #fff2e8, #ffd8bf);
}

.overview-card.followed-month {
  background: linear-gradient(135deg, #fff7e6, #ffd591);
}

.overview-card.overdue-followup {
  background: linear-gradient(135deg, #fff2f0, #ffccc7);
}

.overview-card.no-followup {
  background: linear-gradient(135deg, #f9f0ff, #d3adf7);
}

/* 添加用户按钮样式 */
.add-user-btn {
  margin-bottom: 24rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

