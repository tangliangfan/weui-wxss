
/* 页面容器样式 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 16rpx;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

/* 添加用户按钮样式 */
.add-user-btn {
  margin-bottom: 24rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 用户列表样式 */
.user-list {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fafafa;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 26rpx;
  color: #666;
}

/* 用户卡片样式 */
.user-card {
  position: relative;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: #ffffff;
}

.user-card:last-child {
  border-bottom: none;
}

/* 随访剩余时间徽章样式 */
.followup-time-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  z-index: 10;
  min-width: 80rpx;
  text-align: center;
}

.followup-time-remaining {
  background: #dcfce7;
  color: #166534;
}

.followup-time-overdue {
  background: #fee2e2;
  color: #991b1b;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-badge.success {
  background: rgba(82, 196, 26, 0.1);
  color: #389e0d;
}

.status-badge.danger {
  background: rgba(245, 34, 45, 0.1);
  color: #cf1322;
}

.status-badge.secondary {
  background: rgba(191, 191, 191, 0.1);
  color: #8c8c8c;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.info-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

/* 加载状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.loading-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-content.search-modal {
  width: 85%;
  max-width: 680rpx;
}

.modal-content.delete-modal {
  width: 80%;
  max-width: 560rpx;
}

.modal-header {
  position: relative;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #666;
}

.close-icon {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.form-textarea {
  min-height: 120rpx;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #1890ff;
  color: white;
}

/* 搜索结果项样式 - 重新设计避免按钮被遮挡 */
.search-result-item {
  position: relative;
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-result-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  position: relative;
}

.result-name-container {
  flex: 1;
  min-width: 0;
  margin-right: 80rpx;
}

.result-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.delete-btn-container {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 20;
  padding: 8rpx;
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
  padding: 12rpx;
  background: rgba(245, 34, 45, 0.1);
  border-radius: 50%;
  opacity: 0.8;
  transition: all 0.2s ease;
}

.delete-icon:active {
  opacity: 1;
  background: rgba(245, 34, 45, 0.2);
  transform: scale(0.95);
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.result-info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.result-info-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

/* 阻止事件冒泡 - 空样式，可保留或删除 */
.stop-propagation {
  /* 空样式，用于事件处理 */
}
