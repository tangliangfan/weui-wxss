
/* 页面容器样式 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 16rpx;
}

/* 搜索栏样式 - 优化宽度比例，确保提示文字完整显示 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 12rpx; /* 减小间距 */
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1; /* 搜索框占据剩余所有空间 */
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  min-width: 0; /* 允许搜索框收缩 */
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0; /* 防止图标被压缩 */
}

.search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  min-width: 0; /* 允许输入框收缩 */
  width: 100%; /* 确保输入框宽度充满容器 */
}

.search-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 0 16rpx; /* 进一步减小左右内边距 */
  height: 80rpx;
  font-size: 26rpx; /* 稍微减小字体大小 */
  line-height: 80rpx;
  min-width: 100rpx; /* 减小最小宽度 */
  flex-shrink: 0; /* 防止按钮被压缩 */
  white-space: nowrap; /* 防止文字换行 */
}

/* 数据总览区域样式 */
.overview-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.overview-section .section-header {
  margin-bottom: 24rpx;
  padding: 0;
  border-bottom: none;
  background: none;
}

.overview-section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.overview-section .section-subtitle {
  font-size: 26rpx;
  color: #666;
  opacity: 0.8;
}

/* 总览加载状态 */
.overview-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.overview-loading .loading-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

/* 总览卡片网格布局 - 3×2 网格 */
.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

/* 总览卡片基础样式 - 最终优化版 */
.overview-card {
  position: relative;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  min-height: 120rpx; /* 减小卡片高度 */
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.overview-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 卡片数值样式 - 右上角，与图标中心水平对齐 */
.card-value {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 32rpx; /* 稍微减小字体大小 */
  font-weight: 700;
  line-height: 1;
  z-index: 2;
}

/* 卡片图标样式 - 圆形，减小尺寸 */
.card-icon-wrapper {
  width: 48rpx; /* 减小图标尺寸 */
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx; /* 减小图标与标签间距 */
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

.card-icon {
  width: 24rpx; /* 减小图标尺寸 */
  height: 24rpx;
  filter: brightness(0) invert(1); /* 图标变为白色 */
}

/* 卡片标签样式 - 调整位置和样式 */
.card-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  line-height: 1.2;
  margin-top: 4rpx; /* 减小与图标的间距 */
}

/* 移除卡片趋势标签 */
.card-trend {
  display: none;
}

/* 特定卡片样式 - 统一白色背景，数值颜色与图标背景保持一致 */

/* 用户总数卡片 - 蓝色 */
.overview-card.total-users .card-icon-wrapper {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
}

.overview-card.total-users .card-value {
  color: #3b82f6; /* 数值颜色与图标背景一致 */
}

/* 本年新增用户卡片 - 青色 */
.overview-card.new-users-year .card-icon-wrapper {
  background: linear-gradient(135deg, #0d9488, #0f766e);
}

.overview-card.new-users-year .card-value {
  color: #0d9488; /* 数值颜色与图标背景一致 */
}

/* 本月新增用户卡片 - 紫色 */
.overview-card.new-users-month .card-icon-wrapper {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
}

.overview-card.new-users-month .card-value {
  color: #8b5cf6; /* 数值颜色与图标背景一致 */
}

/* 本月随访卡片 - 绿色 */
.overview-card.followed-month .card-icon-wrapper {
  background: linear-gradient(135deg, #22c55e, #16a34a);
}

.overview-card.followed-month .card-value {
  color: #22c55e; /* 数值颜色与图标背景一致 */
}

/* 过期随访卡片 - 红色 */
.overview-card.overdue-followup .card-icon-wrapper {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.overview-card.overdue-followup .card-value {
  color: #ef4444; /* 数值颜色与图标背景一致 */
}

/* 无随访记录卡片 - 灰色 */
.overview-card.no-followup .card-icon-wrapper {
  background: linear-gradient(135deg, #6b7280, #4b5563);
}

.overview-card.no-followup .card-value {
  color: #6b7280; /* 数值颜色与图标背景一致 */
}

/* 数据卡片详情模态框样式 */
.modal-content.overview-detail-modal {
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
}

/* 优化数据卡片详情模态框头部布局 - 减小高度并移除副标题背景框 */
.overview-detail-modal .modal-header {
  position: relative;
  padding: 24rpx 32rpx; /* 减小垂直内边距 */
  border-bottom: 2rpx solid #f0f0f0;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx; /* 减小间距 */
  background: linear-gradient(135deg, #fafafa, #f5f5f5);
  min-height: auto; /* 移除最小高度限制 */
}

.overview-detail-modal .modal-title {
  font-size: 32rpx; /* 稍微减小字体大小 */
  font-weight: 700;
  color: #1f2937;
  line-height: 1.3;
  text-align: center;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  margin: 0; /* 移除默认外边距 */
}

.overview-detail-modal .modal-subtitle {
  font-size: 26rpx; /* 稍微减小字体大小 */
  color: #6b7280;
  font-weight: 500;
  line-height: 1.4;
  text-align: center;
  /* 移除背景色、边框和内边距 */
  background: none;
  padding: 0;
  border: none;
  border-radius: 0;
}

.overview-detail-modal .modal-body {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 数据卡片详情用户卡片样式 - 修复宽度问题 */
.overview-detail-user-card {
  position: relative;
  padding: 24rpx;
  border-radius: 12rpx;
  background: #ffffff;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
  width: 100%; /* 确保宽度为100% */
  box-sizing: border-box; /* 包含内边距和边框在宽度内 */
}

.overview-detail-user-card:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.overview-detail-user-card:last-child {
  margin-bottom: 0;
}

.overview-detail-user-card .user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.overview-detail-user-card .user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  word-break: break-all; /* 防止长名字溢出 */
}

.overview-detail-user-card .user-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.overview-detail-user-card .info-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #666;
  word-break: break-all; /* 防止长文本溢出 */
}

.overview-detail-user-card .info-icon {
  width: 26rpx;
  height: 26rpx;
  opacity: 0.6;
  flex-shrink: 0; /* 防止图标被压缩 */
}

