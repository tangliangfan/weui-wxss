
/* 随访记录模态框组件样式 - 优化版 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
  position: relative;
  background: linear-gradient(135deg, #fafafa, #f5f5f5);
  border-radius: 24rpx 24rpx 0 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
  font-weight: 500;
}

.modal-title-with-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-title-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.close-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: transparent;
  border: none;
  padding: 8rpx;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.close-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

/* 表单样式 - 优化 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

/* 日期选择器样式 - 优化垂直居中 */
.picker-container {
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  background: white;
  overflow: hidden;
  transition: border-color 0.2s ease;
}

.picker-container:focus-within {
  border-color: #3b82f6;
  box-shadow: 0 0 0 3rpx rgba(59, 130, 246, 0.1);
}

.date-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  min-height: 88rpx;
  cursor: pointer;
}

/* 修复picker-text字体大小问题 */
.picker-text {
  font-size: 28rpx !important; /* 添加!important确保优先级 */
  color: #374151 !important;
  flex: 1;
  display: flex;
  align-items: center;
  min-height: 40rpx;
  line-height: 1.4;
  font-family: inherit; /* 确保字体继承 */
}

.picker-text.placeholder {
  color: #9ca3af !important;
  font-weight: 400;
}

.picker-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
  flex-shrink: 0;
}

/* 禁用状态的日期选择器 */
.disabled-picker .picker-container {
  background-color: #f9fafb;
  border-color: #f3f4f6;
}

.disabled-picker .picker-text {
  color: #6b7280 !important;
}

.disabled-picker .picker-icon {
  opacity: 0.3;
}

/* 文本区域样式 - 优化 */
.form-textarea {
  width: 100%;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: white;
  resize: none;
  min-height: 160rpx;
  transition: border-color 0.2s ease;
  line-height: 1.5;
}

.form-textarea:focus {
  border-color: #3b82f6;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(59, 130, 246, 0.1);
}

.form-textarea::placeholder {
  color: #9ca3af;
  font-weight: 400;
}

.error-message {
  color: #dc2626;
  font-size: 24rpx;
  margin-top: 8rpx;
  font-weight: 500;
}

/* 底部按钮区域 - 优化 */
.modal-footer {
  padding: 32rpx;
  border-top: 2rpx solid #f3f4f6;
  display: flex;
  gap: 20rpx;
  background: #fafafa;
  border-radius: 0 0 24rpx 24rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-cancel {
  background: white;
  border: 2rpx solid #d1d5db;
  color: #374151;
}

.btn-cancel:active {
  background: #f3f4f6;
  border-color: #9ca3af;
}

.btn-confirm {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.btn-confirm:active {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.2);
}

.btn-confirm:disabled {
  background: #9ca3af;
  box-shadow: none;
}

.btn-loading {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 响应式适配 */
@media (max-width: 768px) {
  .modal {
    padding: 16rpx;
  }
  
  .modal-content {
    max-width: 90%;
  }
  
  .modal-header {
    padding: 24rpx 24rpx 20rpx;
  }
  
  .modal-body {
    padding: 24rpx;
  }
  
  .modal-footer {
    padding: 24rpx;
  }
  
  .picker-display {
    padding: 20rpx;
    min-height: 80rpx;
  }
  
  .picker-text {
    font-size: 26rpx !important; /* 响应式也添加!important */
  }
  
  .btn-cancel,
  .btn-confirm {
    height: 80rpx;
    font-size: 26rpx;
  }
}

/* 滚动条样式优化 */
.modal-body::-webkit-scrollbar {
  width: 6rpx;
}

.modal-body::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

.modal-body::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3rpx;
}

.modal-body::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}
