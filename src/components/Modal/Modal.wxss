
/* 模态弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.modal-container {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
  position: relative;
}

.modal-title-section {
  flex: 1;
  margin-right: 32rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

.close-btn {
  background: transparent;
  border: none;
  padding: 8rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.7;
}

.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx 32rpx;
  max-height: 60vh;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f3f4f6;
  display: flex;
  gap: 16rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-cancel {
  background: white;
  border: 2rpx solid #d1d5db;
  color: #374151;
}

.btn-cancel:active {
  background: #f9fafb;
}

.btn-confirm {
  background: #3b82f6;
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-confirm:active {
  background: #2563eb;
}

.btn-confirm[disabled] {
  background: #9ca3af;
}

/* 动画效果 */
.modal-mask {
  animation: fadeIn 0.3s ease;
}

.modal-container {
  animation: slideUp 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(50rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}
